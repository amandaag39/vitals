<div class="flex">
  <div class="px-2 mx-2">
    <%= render "shared/breadcrumbs" %>
  </div>
  <!-- Right Content -->
</div>
<div class="flex">
  <div class="px-2 mx-2">
    <div>
      <br>
      <%= render @reading %>
      <br>
      <div class="button-group text-right">
        <%= link_to edit_reading_path(@reading), class: "btn btn-xs btn-accent" do %>
          <i class="fa fa-pencil-alt"></i> Edit this reading
        <% end %>
        <%= button_to @reading, method: :delete, class: "btn btn-xs btn-error mt-2", data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash"></i> Destroy this reading
        <% end %>
      </div>
    </div>
  </div>
</div>
