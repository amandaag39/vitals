<div id="<%= dom_id reading %>">
  <p>
    <strong>Vital:</strong>
    <%= reading.vital.name %>
  </p>

  <p>
    <strong>Numeric reading:</strong>
    <%= reading.numeric_reading %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag reading.image if reading.image.attached? %>
  </p>
  
  <p>
    <strong>Measured at:</strong>
    <%= reading.measured_at %>
  </p>
  
  <br>

</div>
