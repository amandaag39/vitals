<div class="min-h-screen flex justify-center w-full">
  <div class="flex flex-col items-center">
    <div>
      <h4 class="text-3xl mx-auto my-8 text-center font-bold">My Vitals</h4>
    </div>

    <div id="vitals" class="text-center">
      <% if @vitals.empty? %>
        <div class="text-center">
          <p>You have no vitals yet.</p>
          <%= link_to "Create your first vital", new_vital_path, class: "btn btn-primary" %>
        </div>
      <% else %>
        <% @vitals.each do |vital| %>
          <% card_class = case vital.category
                          when 'numerical' then 'bg-primary'
                          when 'text' then 'bg-secondary'
                          when 'image' then 'bg-accent'
                          else 'bg-base-100'
                          end
          %>
          <% btn_class = case vital.category
                        when 'numerical' then 'btn btn-accent'
                        when 'text' then 'btn btn-accent'
                        when 'image' then 'btn btn-secondary'
                        else 'btn'
                        end
          %>
          <div class="card w-96 <%= card_class %> text-primary-content mx-auto my-4 w-full">
            <div class="card-body">
              <p><%= render vital %></p>
              <div class="card-actions justify-end">
                <% if vital.category == 'numerical'  %>
                  <p>
                    <%= link_to "View Chart", vital_chart_path(vital_id: vital.id), class: "btn btn-secondary ml-2" %>
                  </p>
                <% end %>
                <p><%= link_to "Edit", edit_vital_path(vital), class: btn_class %></p>
                <p><%= link_to '+', new_reading_path(vital_id: vital.id), class: "btn #{btn_class} ml-2" %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <% unless @vitals.empty? %>
      <div>
        <%= link_to "Create a new custom vital", new_vital_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
