<div class="flex">
  <div class="px-2 mx-2">
    <%= render "shared/breadcrumbs" %>
  </div>
  <!-- Right Content -->
</div>
<div class="min-h-screen flex justify-center w-full">
  <div class="flex flex-col items-center">
    <div>
      <h4 class="text-3xl mx-auto my-8 text-center">Edit Vital</h4>
    </div>
    <div>
      <%= render "form", vital: @vital %>
      <br>
      <div class="w-full text-center">
        <%= button_to @vital, method: :delete, data: { confirm: 'Are you sure you want to delete this vital? All related readings will also be deleted.' }, class: "btn btn-xs btn-error", form_class: "inline" do %>
          <i class="fa-regular fa-trash-can"></i>Delete this Vital
        <% end %>
      </div>
    </div>
  </div>
</div>
