<div class="card items-center bg-base-900 shadow-lg shadow-indigo-700/40 mb-8">
  <div class="card-body">
    <%= form_with(model: vital) do |form| %>
      <% if vital.errors.any? %>
        <div role="alert" class="alert alert-error p-4 mb-4 rounded bg-red-100 border border-red-400 text-red-700">
          <div class="flex">
            <div class="py-1"><svg xmlns="http://www.w3.org/2000/svg" class="fill-current h-6 w-6 text-red-500 mr-4" viewBox="0 0 20 20"><path d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-9 4a1 1 0 100-2 1 1 0 000 2zm0-3a1 1 0 01-1-1V7a1 1 0 012 0v3a1 1 0 01-1 1z"/></svg></div>
            <div>
              <p class="font-bold">Errors</p>
              <ul class="list-disc pl-6">
                <% vital.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-sm font-bold mb-2" %>
        <%= form.text_field :name, class: "input input-bordered input-secondary w-full max-w-xs" %>
      </div>
      <div class="mb-4">
        <%= form.label :category, class: "block text-sm font-bold mb-2" %>
        <%= form.select :category, Vital.category_options, {}, class: "select select-secondary w-full max-w-xs" %>
      </div>
      <div class="text-right">
        <%= form.submit "Save", class: "btn btn-secondary my-4 shadow-lg shadow-indigo-700/40" %>
      </div>
    <% end %>
  </div>
</div>
