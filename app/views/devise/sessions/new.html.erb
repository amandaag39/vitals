<div class="min-h-screen flex justify-center w-full">
  <div class="flex flex-col items-center">
    <h4 class="text-3xl mx-auto my-8 text-center">Log In</h4>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex justify-center">
        <div class="form-inputs w-full max-w-xs border border-slate-700 p-4 rounded-xl space-y-12 shadow-lg shadow-indigo-700/40 mb-8">
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input input-bordered input-primary w-full max-w-xs placeholder:text-slate-600" },
                    label: "Email" %>
          <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "input input-bordered input-primary w-full max-w-xs placeholder:text-slate-600" },
                    label: "Password" %>
          <% if devise_mapping.rememberable? %>
            <div class="flex justify-center items-center">
              <%= f.check_box :remember_me, class: "form-checkbox checkbox checkbox-primary" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2" %>
            </div>
          <% end %>
          <div class="form-actions flex justify-center">
            <%= f.button :submit, "Log in", class: "btn btn-primary my-4 shadow-lg shadow-indigo-700/40" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-full max-w-xs text-left">
      <p><strong>New User?</strong></p>
      <p><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>